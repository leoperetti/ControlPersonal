@model ControlPrecios.Models.GastosModel

@using (Html.BeginForm("CargarComercio", "Gastos"))
{
    <div class="form-horizontal">
        <div hidden="hidden" class="form-group">
            @Html.LabelFor(model => model.Comercio.IdTipoComercio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comercio.IdTipoComercio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comercio.IdTipoComercio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comercio.TipoComercio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comercio.TipoComercio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comercio.TipoComercio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comercio.Habilitado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comercio.Habilitado)
                @Html.ValidationMessageFor(model => model.Comercio.Habilitado, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-offset-2 col-md-10 btn-group">
            <input id="guardarComercio" type="submit" value="Guardar" class="btn btn-danger" />
            <input id="cerrarComercio" type="button" value="Cerrar" class="btn btn-danger" />
        </div>
    </div>
        }
